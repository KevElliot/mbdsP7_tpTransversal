<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageEquipe1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ballon"/>

                    <TextView
                        android:id="@+id/betProno"
                        android:fontFamily="@font/regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Equipe 1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/betStadeDomicile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:text="Stade Santiago BernabÃ©u"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/betEquipe1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/light"
                            android:text="Equipe 1" />

                        <TextView
                            android:id="@+id/vs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="vs" />

                        <TextView
                            android:id="@+id/betEquipe2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/light"
                            android:text="Equipe 2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/thin"
                            android:layout_alignParentRight="true"
                            android:text="Cote : " />

                        <TextView
                            android:id="@+id/betCote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/regular"
                            android:text="x" />

                        <TextView
                            android:layout_marginStart="50dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/thin"
                            android:layout_alignParentRight="true"
                            android:text="Gain : " />

                        <TextView
                            android:id="@+id/betGain"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/regular"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="x" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/betChangeMise"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal"
                        android:hint="mise"
                        android:textColor="@color/grey_back"
                        android:textColorHint="@color/grey_back"
                        android:textAlignment="center"
                        android:fontFamily="@font/regular"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/betMiser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/regular"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:text="Miser" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/betDelete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/regular"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:text="Supprimer" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>